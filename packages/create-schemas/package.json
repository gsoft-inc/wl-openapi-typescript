{
    "name": "@workleap/create-schemas",
    "author": "Workleap",
    "version": "0.3.0",
    "description": "CLI to generate Typescript schemas from an OpenAPI document",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-openapi-typescript.git",
        "directory": "packages/create-schemas"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "type": "module",
    "bin": {
        "create-schemas": "./bin/create-schemas.js"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./plugins": {
            "import": "./dist/plugins/index.js",
            "types": "./dist/plugins/index.d.ts"
        }
    },
    "files": [
        "bin",
        "dist"
    ],
    "scripts": {
        "dev": "tsup --config tsup.dev.ts",
        "test": "vitest",
        "build": "tsup --config tsup.build.ts"
    },
    "devDependencies": {
        "@swc/helpers": "0.5.15",
        "@types/node": "20.17.19",
        "@workleap/eslint-plugin": "3.2.6",
        "@workleap/swc-configs": "2.2.4",
        "@workleap/tsup-configs": "3.0.7",
        "eslint": "8.57.1",
        "tsup": "8.3.6",
        "vitest": "1.6.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "c12": "1.11.2",
        "chokidar": "3.6.0",
        "commander": "12.1.0",
        "kleur": "4.1.5",
        "openapi-typescript": "7.6.1",
        "typescript": "5.7.3",
        "zod": "3.24.2"
    }
}