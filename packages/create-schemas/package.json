{
    "name": "@workleap/create-schemas",
    "author": "Workleap",
    "version": "0.3.0",
    "description": "CLI to generate Typescript schemas from an OpenAPI document",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-openapi-typescript.git",
        "directory": "packages/create-schemas"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "type": "module",
    "bin": {
        "create-schemas": "./bin/create-schemas.js"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./plugins": {
            "import": "./dist/plugins/index.js",
            "types": "./dist/plugins/index.d.ts"
        }
    },
    "files": [
        "bin",
        "dist"
    ],
    "scripts": {
        "dev": "tsup --config tsup.dev.ts",
        "test": "vitest",
        "build": "tsup --config tsup.build.ts"
    },
    "devDependencies": {
        "@swc/helpers": "0.5.11",
        "@types/node": "22.13.4",
        "@workleap/eslint-plugin": "3.2.2",
        "@workleap/swc-configs": "2.2.3",
        "@workleap/tsup-configs": "3.0.6",
        "eslint": "9.20.1",
        "tsup": "8.1.0",
        "vitest": "1.6.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "c12": "2.0.2",
        "chokidar": "4.0.3",
        "commander": "13.1.0",
        "kleur": "4.1.5",
        "openapi-typescript": "7.0.2",
        "typescript": "5.5.3",
        "zod": "3.23.8"
    }
}